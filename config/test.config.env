# Test Execution Configuration
DEFAULT_WAIT_TIME=5000
ELEMENT_WAIT_TIMEOUT=30000
PAGE_LOAD_TIMEOUT=60000
SCRIPT_TIMEOUT=30000
DEFAULT_RETRY_COUNT=2
DEFAULT_RETRY_DELAY=1000

# Test Data Configuration
TEST_DATA_PATH=./test-data
TEST_DATA_CLEANUP=true
TEST_DATA_ENCRYPTION=false

# Screenshot Configuration
SCREENSHOT_ON_FAILURE=true
SCREENSHOT_FULL_PAGE=false
SCREENSHOT_QUALITY=80
SCREENSHOT_PATH=./screenshots

# Video Configuration
VIDEO_ON_FAILURE=true
VIDEO_SIZE_WIDTH=1280
VIDEO_SIZE_HEIGHT=720
VIDEO_PATH=./videos

# Trace Configuration
TRACE_ON_FAILURE=true
TRACE_SCREENSHOTS=true
TRACE_SNAPSHOTS=true
TRACE_SOURCES=false
TRACE_PATH=./traces

# Parallel Execution Configuration
DEFAULT_PARALLEL_WORKERS=4
MAX_PARALLEL_WORKERS=8
PARALLEL_RETRY_COUNT=2
PARALLEL_FAIL_FAST=false

# Reporting Configuration
REPORT_INCLUDE_PASSED=true
REPORT_INCLUDE_FAILED=true
REPORT_INCLUDE_SKIPPED=true
REPORT_INCLUDE_PENDING=false
REPORT_SCREENSHOT_ON_PASS=false
REPORT_VIDEO_ON_PASS=false
REPORT_DETAILED_STEPS=true
REPORT_INCLUDE_CONSOLE_LOGS=true
REPORT_INCLUDE_NETWORK_LOGS=true
REPORT_INCLUDE_BROWSER_LOGS=true

# API Testing Configuration
API_DEFAULT_TIMEOUT=60000
API_RETRY_COUNT=3
API_RETRY_DELAY=2000
API_VALIDATE_SSL=true
API_LOG_REQUEST_BODY=true
API_LOG_RESPONSE_BODY=true
API_LOG_HEADERS=true
API_FOLLOW_REDIRECTS=true
API_MAX_REDIRECTS=5

# Database Testing Configuration
DB_CONNECTION_TIMEOUT=30000
DB_QUERY_TIMEOUT=60000
DB_TRANSACTION_TIMEOUT=120000
DB_CONNECTION_POOL_SIZE=10
DB_CONNECTION_POOL_MIN=2
DB_CONNECTION_POOL_MAX=20
DB_ENABLE_LOGGING=true
DB_LOG_QUERIES=true
DB_LOG_SLOW_QUERIES=true
DB_SLOW_QUERY_THRESHOLD=5000

# AI Configuration
AI_CONFIDENCE_THRESHOLD=0.75
AI_MAX_HEALING_ATTEMPTS=3
AI_HEALING_DELAY=1000
AI_ENABLE_VISUAL_MATCHING=true
AI_ENABLE_PATTERN_MATCHING=true
AI_ENABLE_NLP_MATCHING=true
AI_TRAINING_MODE=false
AI_COLLECT_TRAINING_DATA=true

# Browser Configuration
DEFAULT_VIEWPORT_WIDTH=1920
DEFAULT_VIEWPORT_HEIGHT=1080
BROWSER_SLOWMO=0
BROWSER_DEVTOOLS=false
IGNORE_HTTPS_ERRORS=false
BROWSER_ARGS=--disable-dev-shm-usage,--no-sandbox

# Network Configuration
NETWORK_TIMEOUT=30000
NETWORK_IDLE_TIMEOUT=500
INTERCEPT_REQUESTS=false
MOCK_RESPONSES=false
RECORD_HAR=false
BLOCK_RESOURCES=

# Performance Configuration
PERFORMANCE_MONITORING=true
PERFORMANCE_BUDGET_FCP=1500
PERFORMANCE_BUDGET_LCP=2500
PERFORMANCE_BUDGET_TTI=3500
