CLEANUP_BROWSER_CACHE=true
CLEANUP_COOKIES=true
CLEANUP_LOCAL_STORAGE=true
CLEANUP_SESSION_STORAGE=true

# Debug Configuration
DEBUG_MODE=false
DEBUG_PAUSE_ON_FAILURE=false
DEBUG_TAKE_SCREENSHOT_ON_EACH_STEP=false
DEBUG_LOG_BROWSER_CONSOLE=true
DEBUG_LOG_NETWORK_ACTIVITY=false