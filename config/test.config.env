SECURITY_SCAN_HEADERS=true
SECURITY_CHECK_SSL=true

# Accessibility Configuration
ACCESSIBILITY_TESTING_ENABLED=false
ACCESSIBILITY_STANDARD=WCAG2AA
ACCESSIBILITY_INCLUDE_WARNINGS=false
ACCESSIBILITY_INCLUDE_NOTICES=false

# Visual Testing Configuration
VISUAL_TESTING_ENABLED=false
VISUAL_BASELINE_PATH=./baselines
VISUAL_DIFF_THRESHOLD=0.01
