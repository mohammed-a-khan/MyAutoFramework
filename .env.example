# CS Test Automation Framework - Environment Configuration Template
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development
ENVIRONMENT=local

# Application URLs
BASE_URL=https://localhost:3000
API_BASE_URL=https://api.localhost:3000

# Browser Configuration
DEFAULT_BROWSER=chromium
HEADLESS_MODE=false
BROWSER_SLOWMO=0
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Test Configuration
DEFAULT_TIMEOUT=30000
RETRY_COUNT=2
PARALLEL_WORKERS=4

# Reporting
REPORT_PATH=./reports
REPORT_THEME_PRIMARY_COLOR=#93186C
GENERATE_PDF_REPORT=true
GENERATE_EXCEL_REPORT=false

# AI Configuration
AI_ENABLED=true
AI_SELF_HEALING_ENABLED=true
AI_CONFIDENCE_THRESHOLD=0.75

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./logs

# ADO Integration
ADO_ENABLED=false
ADO_ORGANIZATION=your-org
ADO_PROJECT=your-project
ADO_PAT=your-personal-access-token
ADO_TEST_PLAN_ID=
ADO_TEST_SUITE_ID=

# Proxy Configuration (if required)
PROXY_ENABLED=false
PROXY_SERVER=http://proxy.company.com
PROXY_PORT=8080
PROXY_USERNAME=
PROXY_PASSWORD=
PROXY_BYPASS=localhost,127.0.0.1

# API Authentication
API_AUTH_TYPE=bearer
API_AUTH_TOKEN=
API_USERNAME=
API_PASSWORD=

# Database Configuration
DB_ENABLED=false
DB_TYPE=sqlserver
DB_HOST=localhost
DB_PORT=1433
DB_NAME=TestDB
DB_USERNAME=sa
DB_PASSWORD=
DB_ENCRYPT=true
DB_TRUST_SERVER_CERTIFICATE=false

# Certificate Authentication
CERT_AUTH_ENABLED=false
CERT_PATH=./certs/client.p12
CERT_PASSWORD=
CA_CERT_PATH=./certs/ca.crt

# Test Data
TEST_DATA_PATH=./test-data
TEST_DATA_ENCRYPTION_ENABLED=false
TEST_DATA_ENCRYPTION_KEY=

# Screenshots & Videos
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=false
TRACE_ON_FAILURE=true

# Performance Budget
PERFORMANCE_BUDGET_FCP=1500
PERFORMANCE_BUDGET_LCP=2500
PERFORMANCE_BUDGET_TTI=3500
PERFORMANCE_BUDGET_CLS=0.1

# Security Testing
SECURITY_TESTING_ENABLED=false
SECURITY_SCAN_COOKIES=true
SECURITY_CHECK_SSL=true

# Accessibility Testing
ACCESSIBILITY_TESTING_ENABLED=false
ACCESSIBILITY_STANDARD=WCAG2AA

# Visual Testing
VISUAL_TESTING_ENABLED=false
VISUAL_BASELINE_PATH=./baselines
VISUAL_DIFF_THRESHOLD=0.01

# Cleanup
CLEANUP_AFTER_EACH_SCENARIO=true
CLEANUP_BROWSER_CACHE=true
CLEANUP_COOKIES=true

# Debug
DEBUG_MODE=false
DEBUG_PAUSE_ON_FAILURE=false
DEBUG_TAKE_SCREENSHOT_ON_EACH_STEP=false